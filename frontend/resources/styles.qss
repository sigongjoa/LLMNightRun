/* Main application styles */

/* General styles */
QMainWindow {
    background-color: #F5F5F5;
}

QWidget {
    font-family: 'Segoe UI', Arial, sans-serif;
    font-size: 10pt;
}

QLabel {
    color: #333333;
    margin: 2px;
}

QPushButton {
    background-color: #2962FF;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    margin: 4px;
    outline: none;
    font-weight: bold;
}

QPushButton:hover {
    background-color: #1E88E5;
}

QPushButton:pressed {
    background-color: #1565C0;
}

QPushButton:disabled {
    background-color: #BDBDBD;
    color: #757575;
}

QLineEdit, QTextEdit {
    background-color: white;
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    padding: 6px;
}

QLineEdit:focus, QTextEdit:focus {
    border: 1px solid #2962FF;
}

QComboBox {
    background-color: white;
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    padding: 6px;
}

QComboBox::drop-down {
    border: none;
}

QComboBox::down-arrow {
    width: 14px;
    height: 14px;
    image: url(dropdown.png);
}

QTabWidget::pane {
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    background-color: white;
}

QTabBar::tab {
    background-color: #EEEEEE;
    border: 1px solid #BDBDBD;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 8px 16px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: white;
    border-bottom: 1px solid white;
}

QScrollArea {
    border: none;
    background-color: #F5F5F5;
}

QListWidget, QTableWidget {
    background-color: white;
    border: 1px solid #BDBDBD;
    border-radius: 4px;
}

QListWidget::item, QTableWidget::item {
    padding: 8px;
}

QListWidget::item:selected, QTableWidget::item:selected {
    background-color: #E3F2FD;
    color: #2962FF;
}

QGroupBox {
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    margin-top: 16px;
    padding-top: 16px;
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 4px;
    left: 8px;
}

QSlider::groove:horizontal {
    border: 1px solid #BDBDBD;
    height: 8px;
    background: #EEEEEE;
    margin: 2px 0;
    border-radius: 4px;
}

QSlider::handle:horizontal {
    background: #2962FF;
    border: none;
    width: 16px;
    margin: -4px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background: #1E88E5;
}

/* Sidebar styles */
#sidebar {
    background-color: #263238;
    min-width: 200px;
    max-width: 200px;
}

#appTitle {
    color: white;
    font-size: 18pt;
    font-weight: bold;
    margin: 10px 0;
}

#versionLabel {
    color: #B0BEC5;
    font-size: 9pt;
    margin: 4px 0;
}

#sidebarButton {
    background-color: transparent;
    color: #B0BEC5;
    text-align: left;
    padding: 12px;
    font-weight: normal;
    border-radius: 0;
    margin: 2px 0;
}

#sidebarButton:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
}

#sidebarButton:checked {
    background-color: rgba(255, 255, 255, 0.2);
    color: white;
    font-weight: bold;
}

/* Conversation list styles */
#conversationListHeader {
    background-color: #EEEEEE;
    border-bottom: 1px solid #BDBDBD;
    padding: 10px;
}

#newChatButton {
    background-color: #4CAF50;
    margin: 6px;
}

#newChatButton:hover {
    background-color: #43A047;
}

#newChatButton:pressed {
    background-color: #388E3C;
}

#todayLabel {
    color: #757575;
    padding: 8px 4px;
    margin: 4px 0;
    font-weight: bold;
}

#conversationItem {
    background-color: white;
    border: 1px solid #EEEEEE;
    border-radius: 4px;
    padding: 8px;
    margin: 6px 4px;
}

#conversationItem:hover {
    border: 1px solid #BDBDBD;
}

#conversationItem[selected="true"] {
    background-color: #E3F2FD;
    border: 1px solid #2962FF;
}

#conversationTitle {
    color: #333333;
    font-weight: bold;
    margin: 2px 0;
}

#conversationTimestamp {
    color: #757575;
    margin: 2px 0;
}

/* Chat view styles */
#chatHeader {
    background-color: #EEEEEE;
    border-bottom: 1px solid #BDBDBD;
    padding: 8px 16px;
}

#modelLabel {
    font-weight: bold;
    margin: 4px;
}

#regenerateButton {
    background-color: #FF9800;
    margin: 4px;
}

#regenerateButton:hover {
    background-color: #F57C00;
}

#regenerateButton:pressed {
    background-color: #EF6C00;
}

#messagesScroll {
    background-color: #F5F5F5;
    border: none;
    padding: 10px;
}

#userMessage {
    background-color: #E3F2FD;
    border-radius: 10px;
    margin-left: 15%;
    width: 85%;
    padding: 12px;
    margin-bottom: 16px;
}

#assistantMessage {
    background-color: white;
    border-radius: 10px;
    width: 85%;
    padding: 12px;
    margin-bottom: 16px;
    border: 1px solid #E0E0E0;
}

#roleLabel {
    font-weight: bold;
    margin: 0 0 6px 0;
}

#timestampLabel {
    color: #757575;
    font-size: 8pt;
    margin: 0 0 6px 0;
}

#contentLabel {
    color: #333333;
    padding: 4px 0;
    line-height: 1.4;
    white-space: pre-wrap;
    word-wrap: break-word;
}

#inputFrame {
    background-color: white;
    border-top: 1px solid #BDBDBD;
    padding: 10px;
}

#textInput {
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    padding: 10px;
    font-size: 10pt;
    margin: 6px;
}

#sendButton {
    background-color: #2962FF;
    margin: 6px;
}

#loadingIndicator {
    background-color: #EEEEEE;
    border-top: 1px solid #BDBDBD;
    border-bottom: 1px solid #BDBDBD;
    padding: 8px;
}

#loadingText {
    color: #757575;
    font-style: italic;
    margin: 4px;
}

/* Code block styles */
#codeBlock {
    background-color: #263238;
    border-radius: 8px;
    margin: 12px 0;
    width: 85%;
}

#codeHeader {
    background-color: #37474F;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    padding: 6px 10px;
}

#langLabel {
    color: #B0BEC5;
    font-weight: bold;
    margin: 4px;
}

#copyButton, #saveButton, #executeButton {
    background-color: #455A64;
    color: white;
    font-size: 9pt;
    padding: 4px 10px;
    margin: 2px 4px;
}

#copyButton:hover, #saveButton:hover, #executeButton:hover {
    background-color: #546E7A;
}

#codeEdit {
    background-color: #263238;
    color: #EEFFFF;
    border: none;
    font-family: 'Consolas', monospace;
    font-size: 10pt;
    padding: 10px;
    margin: 0;
    line-height: 1.4;
}

#resultFrame {
    background-color: #37474F;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    padding: 10px;
}

#resultLabel {
    color: #B0BEC5;
    font-weight: bold;
    margin: 4px;
}

#resultEdit {
    background-color: #37474F;
    color: #EEFFFF;
    border: none;
    font-family: 'Consolas', monospace;
    font-size: 10pt;
    padding: 6px;
    margin: 4px 0;
}

/* Models view styles */
#modelsTable {
    background-color: white;
    border: 1px solid #BDBDBD;
    margin: 10px;
}

QTableWidget QHeaderView::section {
    background-color: #E0E0E0;
    padding: 6px;
    font-weight: bold;
    border: 1px solid #BDBDBD;
    border-bottom: 2px solid #9E9E9E;
}

QTableWidget::item {
    padding: 8px;
    border-bottom: 1px solid #F0F0F0;
}

QTableWidget {
    gridline-color: #E0E0E0;
}

#downloadButton {
    background-color: #4CAF50;
    margin: 2px;
    padding: 6px 10px;
    min-width: 80px;
}

#loadButton {
    background-color: #FF9800;
    margin: 2px;
    padding: 6px 10px;
    min-width: 80px;
}

#unloadButton {
    background-color: #FF5722;
    margin: 2px;
    padding: 6px 10px;
    min-width: 80px;
}

#deleteButton {
    background-color: #F44336;
    margin: 2px;
    padding: 6px 10px;
    min-width: 80px;
}

#useButton {
    background-color: #4CAF50;
    margin: 2px;
    padding: 6px 10px;
    min-width: 80px;
}

/* LocalDocs view styles */
#collectionsList {
    background-color: white;
    border: 1px solid #BDBDBD;
    margin: 10px;
    padding: 4px;
}

#documentsList {
    background-color: white;
    border: 1px solid #BDBDBD;
    margin: 10px;
    padding: 4px;
}

#documentContent {
    background-color: white;
    border: 1px solid #BDBDBD;
    font-family: 'Segoe UI', Arial, sans-serif;
    margin: 10px;
    padding: 10px;
}

#importButton {
    background-color: #4CAF50;
    margin: 4px;
}

#indexButton {
    background-color: #FF9800;
    margin: 4px;
}

/* View headers */
#viewHeader {
    font-size: 18pt;
    font-weight: bold;
    color: #333333;
    margin: 10px 0;
    padding: 6px 0;
}
